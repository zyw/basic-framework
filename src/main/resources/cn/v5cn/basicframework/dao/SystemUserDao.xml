<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.v5cn.basicframework.dao.SystemUserDao">
    <select id="findByUserName" resultType="SystemUser">
        select * from system_user where loginname=#{userName}
    </select>
<!--    <select id="findAll" resultType="Resource">
        select * from sys_resource order by concat(parent_ids, id) asc
    </select>
    <select id="findByResId" resultType="Resource">
        select * from sys_resource where id=#{resId}
    </select>-->
    <insert id="addSystemUser">
        insert into system_user(loginname,password,name,email,sex,mobilephone,originalPic,available)
        values(#{loginname},#{password},#{name},#{email},#{sex},#{mobilephone},#{originalPic},#{available})
    </insert>
</mapper>